<div class="sw-cms-el-form-contact">
    <h3
        v-if="formSettings.title.value.length > 0"
        class="sw-cms-el-form-headline"
    >
        {{ formSettings.title.value }}
    </h3>

    <div class="sw-cms-el-form-contact-form-group two-items">

        <sw-text-field
            :label="$tc('sw-custom-cms-form.elements.form.element.label.firstName')"
            :value="$tc('sw-custom-cms-form.elements.form.element.placeholder.firstName')"
        />

        <sw-text-field
            :label="$tc('sw-custom-cms-form.elements.form.element.label.email')"
            :value="$tc('sw-custom-cms-form.elements.form.element.placeholder.email')"
        />

    </div>

    <div class="sw-cms-el-form-contact-form-group two-items">

        <sw-text-field
            :label="$tc('sw-custom-cms-form.elements.form.element.label.phone')"
            :value="$tc('sw-custom-cms-form.elements.form.element.placeholder.phone')"
        />

        <sw-text-field
            :label="$tc('sw-custom-cms-form.elements.form.element.label.subject')"
            :value="$tc('sw-custom-cms-form.elements.form.element.placeholder.subject')"
        />
    </div>

    <sw-textarea-field
        :label="$tc('sw-custom-cms-form.elements.form.element.label.message')"
        :value="$tc('sw-custom-cms-form.elements.form.element.placeholder.message')"
    />

    <p class="sw-cms-el-form-note">
        {{ $tc('sw-custom-cms-form.elements.form.element.helpText.requiredFields') }}
    </p>

    <div class="sw-cms-el-form__action">
        {{ $tc('sw-custom-cms-form.elements.form.element.label.send') }}
    </div>
</div>
